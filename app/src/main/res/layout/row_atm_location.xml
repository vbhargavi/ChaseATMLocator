<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/textColorWhite"
              android:orientation="vertical"
              android:paddingTop="16dp">

    <TextView
        android:id="@+id/location_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/textColorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Branch"/>

    <TextView
        android:id="@+id/location_distance_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/textColorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="1.1 miles"/>

    <TextView
        android:id="@+id/location_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorBlack"
        android:textSize="16sp"
        tools:text="245 Peachtree Pkwy"/>

    <TextView
        android:id="@+id/location_city_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/textColorBlack"
        android:textSize="16sp"
        tools:text="Atlanta, 30005"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/textColorBlack"/>

</LinearLayout>